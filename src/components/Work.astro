---
import WorkCard from "./WorkCard.astro";
import companies from '../data/companies.json'
---

<section class="work">
  <h2>
    w
    <span class="blue__text">
    O
    </span>
    r
    <span class="blue__text">
    K
    </span>
  </h2>
  <div>

<p>A <span class="blue__text">collection</span> of things I've done in my life as a 
  <span class="developer blue__text">developer</span>
</p>

<div class="card__section">
  {companies.map(comany => <WorkCard {...comany}/>)}
</div>
</div>

</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Londrina+Outline&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Lakki+Reddy&display=swap');

  section {
    background: var(--secondary-yellow);
  }

  .work > div {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
	}

  section h2 {
    font-family: 'Lakki Reddy', cursive;
  }

  .work p {
    font-weight: 700;
    line-height: 1.2;
    text-align: left;
    font-family: 'Lakki Reddy', cursive;
    margin-bottom: 50px;
    padding-left: 2%;
    opacity: 0.86;
    font-size: calc(var(--font-l) + 2vw);
    text-align: center;
  }

  .card__section {
    display: flex;
    flex-direction: column;
  }
  
  .developer {
    display: inline-block;
    -webkit-transform: skewY(10deg);
    -ms-transform: skewY(10deg);
    transform: skewY(10deg);
  }

</style>
