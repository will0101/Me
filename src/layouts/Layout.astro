---
import 'reset-css'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viemax-port" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Merriweather:wght@400;900&display=swap");
	
	:root {
  --primary-dark: #0a0a0a;
  --secondary-yellow: #fdc676;
  --support-blue: #0095ff;
	--support-red: rgb(230, 0, 83);
	--tertiary-green: #31B96E;
	font-family: "Merriweather", serif;;
	--font-xl: calc(152 / 16 * 1.7vw);
	--font-l: calc(152 / 16 * 0.5vw);
	--font-m: calc(152 / 16 * 0.3em);
	--font-s: calc(152 / 16 * 0.4em);
}
	html, body {
		margin: 0;
		padding: 0;
	}

	 main {
		display: flex;
		flex-direction: column;
	}
	
	section {
		text-align: center;
	}
	h2 {
		font-size: var(--font-xl);
		margin-top: 10%;
    font-weight: bold;
	}

.yellow__text {
  color: var(--secondary-yellow);
}

.blue__text {
  color: var(--support-blue);
}

.red__text {
	color: var(--support-red);
}

.green__text {
	color: var(--tertiary-green);
}

@media only screen and (min-width: 1000px) {
	main {
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-auto-rows: minmax(10%, 50vmax);
	}

	h2 {
		font-size: calc(var(--font-l) * 1.5);
		margin-top: 5%;
	}

	.i_am_a {
		font-size: calc(var(--font-m) * 3vh);
		margin-bottom: calc(var(--font-l) / 2);
	}

	.lets_chat {
		font-size: calc(var(--font-s) / 3);
		margin-bottom: 20px;
	}

	.work p {
		font-size: calc(0.8rem + 2vw);
	}

	.now__wrapper {
		line-height: 2.9ch;
		margin-bottom: 0;
	}

	.now__wrapper li {
		font-size: calc(var(--font-l) - 10px);
		line-height: 2.5ch;
		font-size: 1.8vw;
  }

	.ass {
		margin-top: 10px;
  font-size: calc(var(--font-s) * 0.3);
}

.blog h2 {
	font-size: calc(var(--font-xl) / 2);
}

.blog > p {
	font-size: calc(var(--font-l) * 0.9);
}

.content__wrapper {
	flex-direction: row;
}
.content__wrapper ul:first-of-type li:last-child {
	margin-bottom: 0;
}
section h3 {
font-size: 2rem;
}

.content__wrapper ul li {
	font-size: 1.5rem;
}
}
</style>
