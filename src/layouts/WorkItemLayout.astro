---
import 'reset-css'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="William Bogans is a human first, remote software engineer. Who are you?"/>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
	font-family: "Merriweather", serif;
	--zen-green: rgb(3, 54, 61);
	--zen-primary: #228f67;
	--zen-secondary: #efc93d;
	--zen-tertiary: #f6c8be;
	--studio-purple: rgb(71, 0, 214);
}

p,a, h2, li {
	color: white;
}

h2 {
	font-size: calc(2.3rem + 2vw);
	margin-top: 50px;
}
h2:not(:first-of-type) {
		margin: 40px 0;
	}

body {
	margin: 0;
  font-family: 'sharp-sans';
	padding: 20px;
}

</style>
