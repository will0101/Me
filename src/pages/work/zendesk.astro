--- 
import WorkItemLayout from "../../layouts/WorkItemLayout.astro";
import projects from '../../data/zendesk/projects.json'
import ProjectPage from "../../components/ProjectPage.astro";
--- 
<WorkItemLayout title="William - Zendesk career stint page">
  <ProjectPage title="Zortfolio" projects={projects} company='zendesk'/>
</WorkItemLayout>

<style is:global>
  @font-face {
    font-family: 'sharp-sans', 'Merriweather';
    src: url('/fonts/zendesk/Sharp-Sans.otf');
  }
  
  body {
  background-color: var(--zen-green); 
}

strong {
  color: var(--zen-tertiary);
}


section .company__box svg {
  fill: var(--zen-primary);
}

.company__box h1 {
	color: var(--zen-primary);
}

.explanation p {
  color: var(--zen-secondary);
}

div.technology__list li a {
  border-bottom-color: var(--zen-tertiary);
}



</style>

