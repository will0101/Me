---
import WorkItemLayout from "../../layouts/WorkItemLayout.astro";
import ProjectPage from "../../components/ProjectPage.astro";
import projects from "../../data/ideas42/projects.json";
---

<WorkItemLayout title={`William - ideas42 career stint page`}>
  <ProjectPage title="Venture Sphere" projects={projects} company="ideas42" />
</WorkItemLayout>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Epilogue:wght@400;500&display=swap");

  /* The general styles for the page */
  body {
    font-family: "Epilogue", sans-serif;
    --studio-primary: rgb(29, 3, 84);
    --studio-secondary: #e50053;
    --studio-tertiary: rgb(253, 219, 18);
  }

  h2 {
    color: var(--studio-secondary);
  }

  h4 {
    color: var(--studio-tertiary);
  }
  strong {
    color: var(--studio-tertiary);
  }

  header {
    color: white;
    background-color: rgba(29, 114, 226);
  }

  header.company__box {
    flex-direction: column;
    align-items: center;
  }

  svg:first-of-type {
    width: 90vw;
  }

  svg[astro-icon="idea-circle"] {
    width: 50vw;
    position: absolute;
    top: 40%;
    left: 10%;
  }

  div.technology__list li a {
    border-bottom-color: var(--studio-tertiary);
  }

  .technology__list,
  .project__list {
    background-color: var(--studio-primary);
  }

  div figure:not(:first-of-type) {
    width: 10%;
  }

  div ul li::before {
    color: var(--studio-tertiary);
  }
  /* Media queries for responsiveness */
  @media only screen and (min-width: 900px) {
    .explanation p {
      text-align: left;
    }

    svg[astro-icon="idea-circle"] {
      width: 70vw;
      position: absolute;
      left: 20%;
      opacity: 0.5;
      top: 25%;
    }
    figure  {
      width: 80%;

    }
  }
</style>
